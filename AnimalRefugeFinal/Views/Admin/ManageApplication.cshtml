@model IEnumerable<AnimalRefugeFinal.Models.AdoptionApplication>

<h2>Manage Adoption Applications</h2>

<table class="table">
    <thead>
        <tr>
            <th>Applicant Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Number of Pets</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var application in Model)
        {
            <tr>
                <td>@($"{application.FirstName} {application.LastName}")</td>
                <td>@application.Email</td>
                <td>@application.PhoneNumber</td>
                <td>@application.NumberOfPets</td>
                <td>@application.Status</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-area="" asp-controller="Adoption" asp-action="ProcessApplication" asp-route-id="@application.Id">Process</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>