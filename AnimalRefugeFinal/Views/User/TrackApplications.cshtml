@model List<AnimalRefugeFinal.Models.AdoptionApplication>

@{
    ViewData["Title"] = "Track Applications";
}

<h1>Track Applications</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Application ID</th>
                <th>User Name</th>
                <th>Pet Name</th>
                <th>Status</th>
                <th>Submission Date</th>
         
            </tr>
        </thead>
        <tbody>
            @foreach (var application in Model)
            {
                <tr>
                    <td>@application.Id</td>
                    <td>@application.User.UserName</td>
                    <td>@application.Pets.Name</td>
                    <td>@application.Status.StatusName</td>
                    <td>@application.ApplicationDate</td>
                    <!-- Add other columns as needed -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No adoption applications found.</p>
}
